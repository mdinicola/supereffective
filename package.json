{
  "name": "supereffective-website",
  "version": "4.0.0-dev.r03",
  "private": true,
  "repository": "git@github.com:supeffective/website.git",
  "license": "MIT",
  "author": "Javi Aguilar https://itsjavi.com",
  "scripts": {
    "build": "pnpm build-css && pnpm build-mdx && pnpm build-nextjs && pnpm build-sitemap",
    "build-css": "bun run src/scripts/make-css-vars.ts",
    "build-mdx": "bun run src/scripts/make-mdx-index.ts",
    "build-nextjs": "next build",
    "build-sitemap": "next-sitemap",
    "build-vercel": "pnpm typecheck && pnpm prisma-migrate:deploy && pnpm build",
    "bun": "bun",
    "dev": "rm -rf .next && concurrently --kill-others --raw 'pnpm dev-watch' 'pnpm dev-cdn' 'pnpm dev-nextjs'",
    "dev-cdn": "PORT=4455 bun run --hot src/scripts/start-dev-cdn.ts",
    "dev-nextjs": "PORT=3001 next dev",
    "dev-watch": "bun run --hot src/scripts/dev-watch.ts",
    "fix-deps": "NODE_ENV=development pnpm add '@img/sharp-linux-x64'",
    "format": "pnpm sort-package-json && pnpm prettier-fix && pnpm lint-fix",
    "postinstall": "sort-package-json && pnpm build-css && pnpm build-mdx",
    "lint": "pnpm typecheck && pnpm prettier-check && pnpm lint-biome",
    "lint-biome": "biome lint . --max-diagnostics 50",
    "lint-biome-ci": "biome ci . --max-diagnostics 50",
    "lint-ci": "pnpm lint-biome-ci",
    "lint-fix": "biome check --max-diagnostics 50 --apply .",
    "make": "pnpm make-component",
    "make-component": "bun src/scripts/make-component.ts",
    "make-pwa-assets": "src/scripts/make-pwa-assets.sh",
    "prettier-check": "prettier --ignore-path '.prettierignore' --check \"**/*.{json,yml,yaml,css,scss,md,mdx}\"",
    "prettier-fix": "prettier --ignore-path '.prettierignore' --write \"**/*.{json,yml,yaml,css,scss,md,mdx}\"",
    "prisma-migrate": "pnpm migrate:deploy",
    "prisma-migrate:deploy": "pnpm prisma generate && pnpm prisma migrate deploy",
    "prisma-migrate:dev": "pnpm prisma generate && pnpm prisma migrate dev",
    "prisma-migrate:push": "pnpm prisma generate && pnpm prisma db push",
    "qa": "pnpm quality-checks",
    "quality-checks": "rm -rf .next && pnpm prisma generate && pnpm lint && pnpm build && pnpm test",
    "start": "next start",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "5.11.0",
    "@sinclair/typebox": "^0.32.19",
    "@supeffective/dataset": "^2.2.2",
    "@supeffective/icons": "^0.8.6",
    "canvas-confetti": "^1.9.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "fast-average-color-node": "^3.0.0",
    "lucide-react": "^0.363.0",
    "nanoid": "^5.0.6",
    "next": "14.1.4",
    "next-auth": "^4.24.7",
    "next-axiom": "1.1.1",
    "next-sitemap": "^4.2.3",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-modal": "^3.16.1",
    "react-schemaorg": "^2.0.0",
    "resend": "^3.2.0",
    "sass": "^1.72.0",
    "schema-dts": "^1.1.2",
    "sharp": "0.33.3",
    "usehooks-ts": "^3.0.2",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.2",
    "@svgr/webpack": "^8.1.0",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/bun": "^1.0.10",
    "@types/canvas-confetti": "^1.6.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@types/react-modal": "^3.16.3",
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "hono": "^4.1.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "pwa-asset-generator": "^6.3.1",
    "sort-package-json": "^2.8.0",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "nodemailer": "^6.9.12"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18.10.0 <21"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "arm64",
    "x64"
  ],
  "prisma": {
    "schema": "src/v3/lib/prisma/schema.prisma"
  }
}
