{
  "name": "@pkg/database",
  "version": "0.0.0",
  "private": true,
  "description": "Database abstraction layer (DBAL) and ORM for supereffective.gg",
  "scripts": {
    "build": "pnpm codegen",
    "codegen": "rm -rf ./data && pnpm codegen:data && pnpm codegen:prisma && pnpm codegen:ids && pnpm codegen:format",
    "codegen:data": "pnpm data:update",
    "codegen:format": "cd ../../ && pnpm prettier  --write \"packages/database/**/*.{cjs,mjs,js,ts,tsx,json,yml,yaml,css,scss,md,mdx}\" && cd -",
    "codegen:ids": "node lib/codegen/generate-ids.cjs",
    "codegen:prisma": "prisma generate",
    "data:update": "./scripts/data-update-hash.sh",
    "dev:db": "pnpm codegen && pnpm studio:dev",
    "prisma": "prisma",
    "studio:dev": "DATABASE_URL=$STUDIO_DATABASE_URL DIRECT_DATABASE_URL=$STUDIO_DATABASE_URL prisma studio --port 5555 --browser none",
    "studio:prod": "./studio-prod.sh"
  },
  "dependencies": {
    "@pkg/mdx": "workspace:*",
    "@pkg/patreon": "workspace:*",
    "@pkg/utils": "workspace:*",
    "@prisma/client": "^5.7.1",
    "@types/node": "^20.10.5",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
